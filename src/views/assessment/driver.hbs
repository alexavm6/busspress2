<section class="card ajuste">
    <div class="card-body">
    
    

        <form action="/assessment/driver/{{driverInService._id}}" method="POST">

        <h1>Conductor {{driverInService.names}} {{driverInService.last_names}}</h1>
        <p>Genero: {{driverInService.gender}}</p>
        <p>Edad: {{driverInService.age}}</p>
        <p>Correo: {{driverInService.age}}</p>
        

        <div class="form-group">
        <label  class="text" for="amount">Califica al conductor</label>
        <input type="number" value="1" class="form-control" id="cantidad" name="amount" min="1" max="5">
        </div>

        

        <button type="submit" class="btn btn-primary">Enviar</button>
        </form>

    

    </div>
</section>